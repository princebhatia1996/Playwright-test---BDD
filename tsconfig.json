{
  "$schema": "https://json.schemastore.org/tsconfig",  
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "./",
    },
    
  "include": ["**/*.ts", "cucumber.js", "test/support/*.ts", "test/steps/*.ts"],
  "exclude": ["node_modules", "dist"], 
  
  
}
